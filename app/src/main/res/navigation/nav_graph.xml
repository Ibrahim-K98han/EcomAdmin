<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashBoardFragment">

    <fragment
        android:id="@+id/dashBoardFragment"
        android:name="com.ibrahim.ecomadminbatch03.DashBoardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dash_board" >
        <action
            android:id="@+id/action_dashBoardFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_dashBoardFragment_to_addProductFragment2"
            app:destination="@id/addProductFragment2" />
        <action
            android:id="@+id/action_dashBoardFragment_to_categoryFragment2"
            app:destination="@id/categoryFragment2" />
        <action
            android:id="@+id/action_dashBoardFragment_to_viewProductFragment2"
            app:destination="@id/viewProductFragment2" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.ibrahim.ecomadminbatch03.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/addProductFragment2"
        android:name="com.ibrahim.ecomadminbatch03.AddProductFragment"
        android:label="Add Product"
        tools:layout="@layout/fragment_add_product" />
    <fragment
        android:id="@+id/categoryFragment2"
        android:name="com.ibrahim.ecomadminbatch03.CategoryFragment"
        android:label="Category"
        tools:layout="@layout/fragment_category" />
    <fragment
        android:id="@+id/viewProductFragment2"
        android:name="com.ibrahim.ecomadminbatch03.ViewProductFragment"
        android:label="View Product"
        tools:layout="@layout/fragment_view_product" >
        <action
            android:id="@+id/action_viewProductFragment2_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/productDetailsFragment"
        android:name="com.ibrahim.ecomadminbatch03.ProductDetailsFragment"
        android:label="Product Details"
        tools:layout="@layout/fragment_product_details" />
</navigation>